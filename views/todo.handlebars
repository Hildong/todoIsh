<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400&display=swap');

    body{
        margin: 0;
        padding: 0;
    }

    .todo-nav {
        height: 10vh;
        border-bottom: .5px solid rgba(0, 0, 0, 0.3);
        -webkit-box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.75);
        box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.75);
    }

    .logo {
        margin-left: 1rem;
        position: absolute;
        margin-top: 1.5rem;     
        font-size: 1.2rem;
    }

    .account {
        float: right;
        margin-right: 1.5rem;
        margin-top: 1.5rem;
        font-size: 1rem;
        font-size: 1.2rem;
    }

    .logout-btn {
        text-decoration: none;
        transition: 0.3s;
        color: rgb(88, 110, 88);
        font-weight: bold;
    }

    .logout-btn:visited {
        color: rgb(111, 206, 111);
        font-weight: bold;
    }

    .logout-btn:hover {
        color: rgb(194, 216, 154);
    }

    form {
        width: 35em;
        margin: 0 auto;
    }

    .todo {
        height: 2rem;
        width: 29rem;
        font-size: 1rem;
    }

    .submit {
        height: 2rem;
        width: 5rem;
        border-radius: 10px;
        background-color:rgb(194, 216, 154);
        transition: .3s;
    }

    .submit:hover {
        cursor: pointer;
        background-color: rgb(111, 206, 111);
    }
    
    .signupMsg {
    text-align: center;
    font-family: "Montserrat", sans-serif;
    margin-top: 5em;
    font-size: 14px;
    color: red;
    }

</style>

<nav class="todo-nav">
    <span class="logo">Todoish</span>
    <span class="account">Logged in as <b>{{ accountStuff }}</b> | <a class="logout-btn" href="http://localhost:8000/api/user/logout">Logout</a></span>
</nav>
<form action="http://localhost:8000/addtodo" method="POST">
    <p class="signupMsg">{{ todoErrMsg }}</p>
    <input type="text" placeholder="Todo..." class="todo" name="todo" required>
    <input type="submit" value="Add" class="submit">
</form>