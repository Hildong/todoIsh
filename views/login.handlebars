<section class="form-section login-section">
    <h1 class="login-header">Login</h1>
    <form class="login-form" action="https://todoappbyphiliphilding.herokuapp.com/signindata" method="POST"> 
        <br><label class="input-desc-text">Username:</label><br> 
        <input class="input-box" type="text" name="username" required>
        <br><label class="input-desc-text">Password:</label><br> 
        <input class="input-box" type="password" name="pwd" required>
        <br>
        <input class="input-btn" type="submit">
    </form>
    <p class="signinMsg">{{ loginErr }}<span style="opacity: 0;">-</span></p>
    <p class="sign-up-redirect">Don't have an account? <a href="/signup">Sign up</a></p>
</section>